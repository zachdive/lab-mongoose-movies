<h2>Edit the movie</h2>

<form action="/movies/{{movie.id}}" method="POST">

    <label>Title</label>
    <input type="text" name="title" value="{{movie.title}}">

    <label>Genre</label>
    <input type="text" name="genre" value="{{movie.genre}}">

    <label>Plot</label>
    <input type="text" name="plot" value="{{movie.plot}}">

    <select name="cast" multiple>
        <option value="0">Choose actors</option>
        {{#each celebrities}}
            <option value="{{id}}">{{name}}</option>
        {{/each}}

    </select>

    <button type="submit">Edit</button>

</form>
